<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Theme.Home" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">48dip</item>
        <item name="android:actionBarSize" tools:targetApi="11">48dip</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/nva_align</item>
        <item name="homeAsUpIndicator">@drawable/nva_align</item>
        <item name="actionMenuTextColor">@color/text_white</item>
        <item name="android:actionMenuTextColor" tools:targetApi="11">@color/text_white</item>
    </style>
    <style name="Theme.BackStyled" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">48dip</item>
        <item name="android:actionBarSize" tools:targetApi="11">48dip</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/nva_return</item>
        <item name="homeAsUpIndicator">@drawable/nva_return</item>
        <!--
        <item name="android:popupMenuStyle" tools:targetApi="11">@style/PopupMenu.Example</item>
        <item name="popupMenuStyle">@style/PopupMenu.Example</item>
        -->
    </style>
    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/default_drawable</item>
        <item name="android:background">@drawable/default_drawable</item>
        <item name="backgroundSplit">@drawable/default_background</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item name="android:windowBackground">@drawable/loading_background</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style> 
</resources>
